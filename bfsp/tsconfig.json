{
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "declaration": true,
    "sourceMap": false,
    "target": "es2020",
    "module": "es2020",
    "lib": [
      "ES2020"
    ],
    "outDir": "./node_modules/.bfsp/",
    "importHelpers": true,
    "isolatedModules": false,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    // "baseUrl": "./",
    "types": [
      "node"
    ],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "files": [
    "assets/package.template.json",
    "bin/bfsp.bin.ts",
    "bin/test.ts",
    "bin/ava.ts",
    "bin/dev.ts",
    "bin/build.ts",
    "bin/fmt.bin.ts",
    "bin/init.bin.ts",
    "bin/test.bin.ts",
    "src/logger.ts",
    "bin/tsc.ts",
    "bin/vite-build-config-factory.ts",
    "src/bfspConfig.ts",
    "src/toolkit.ts",
    "src/configs/bfspUserConfig.ts",
    "src/configs/commonIgnore.ts",
    "src/configs/gitIgnore.ts",
    "src/configs/npmIgnore.ts",
    "src/configs/packageJson.ts",
    "src/configs/tsConfig.ts",
    "src/configs/viteConfig.ts",
    "src/index.ts",
    "tests/config.test.ts",
    "bin.ts",
  ],
  "references": [
    // {
    //   "path": "./tsconfig.prod.json"
    // }
  ]
}