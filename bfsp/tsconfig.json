{
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "declaration": true,
    "sourceMap": false,
    "target": "es2020",
    "module": "es2020",
    "lib": [
      "ES2020"
    ],
    "outDir": "./node_modules/.bfsp/",
    "importHelpers": true,
    "isolatedModules": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    // "baseUrl": "./",
    "types": [
      "node"
    ],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "files": [
    "bin.ts",
    "assets/package.template.json",
    "assets/vite.config.template.ts",
    "bin/dev.bin.ts",
    "bin/fmt.bin.ts",
    "bin/init.bin.ts",
    "bin/test.bin.ts",
    "bin/vite-build-config-factory.ts",
    "src/bfspConfig.ts",
    "src/index.ts",
    "src/toolkit.ts",
    "src/userConfig.ts",
    "src/gen/commonIgnore.ts",
    "src/gen/gitIgnore.ts",
    "src/gen/npmIgnore.ts",
    "src/gen/packageJson.ts",
    "src/gen/tsConfig.ts",
    "src/gen/viteConfig.ts",
    "tests/config.test.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.prod.json"
    }
  ]
}