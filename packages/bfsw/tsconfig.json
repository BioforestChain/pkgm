{
  "compilerOptions": {
    "experimentalDecorators": true,
    "composite": true,
    "noEmit": true,
    "declaration": true,
    "sourceMap": false,
    "target": "es2020",
    "module": "es2020",
    "lib": [
      "ES2020"
    ],
    "outDir": "./node_modules/.bfsw/",
    "importHelpers": true,
    "isolatedModules": false,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    // "baseUrl": "./",
    "types": [
      "node"
    ],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "files": [
    "package.json",
    "bin/bfsw.cmd.ts",
    "bin/bfsw.env.ts",
    "bin/build.bin.ts",
    "bin/npm.bin.ts",
    "bin/dev.bin.ts",
    "bin/dev.core.ts",
    "bin/init.bin.ts",
    "bin/init.core.ts",
    "bin/create.bin.ts",
    "bin/create.core.ts",
    "bin/version.bin.ts",
    "bin/help.bin.ts",
    "src/index.ts",
    "src/consts.ts",
    "src/configs/WorkspaceConfig.base.ts",
    "src/configs/WorkspaceConfig.loader.ts",
    "src/configs/workspaceConfig.ts",
    "src/configs/workspaceTsConfig.ts",
    "src/configs/workspacePackageJson.ts",
    "src/configs/states.ts"
  ],
  "references": [
    // {
    //   "path": "./tsconfig.prod.json"
    // }
  ]
}