{
  "name": "@bfchain-workspaces/pkgm",
  "private": true,
  "packageManager": "yarn@1.22.0",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@types/node": "^16",
    "concurrently": "^7.0.0",
    "lerna": "^4.0.0"
  },
  "scripts": {
    "postinstall": "node ./scripts/fix-package.cjs",
    "bin:build": "lerna run bin:build --stream --parallel",
    "bin:dev": "lerna run bin:dev --stream --parallel",
    "tsc": "tsc --build -w",
    "dev": "node dev.mjs",
    "i": "lerna bootstrap"
  },
  "dependencies": {
    "prettier": "^2.7.1",
    "typescript": "^4.7.4"
  }
}