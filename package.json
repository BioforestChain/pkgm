{
  "name": "@bfchain/pkgm",
  "private": true,
  "packageManager": "yarn@1.22.0",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@types/node": "^16",
    "concurrently": "^7.0.0",
    "lerna": "^4.0.0"
  },
  "scripts": {
    "i": "lerna bootstrap",
    "build:main": "lerna run build:main --stream --parallel",
    "build:bin": "lerna run build:main --stream --parallel",
    "build:script": "lerna run build:script --stream --parallel",
    "build": "concurrently \"npm:build:*\"",
    "dev:script": "lerna run dev:script --stream --parallel",
    "dev:bin": "lerna run dev:bin --stream --parallel",
    "dev:main": "lerna run dev:main --stream --parallel",
    "dev:old": "concurrently \"npm:dev:*\"",
    "dev:tsc": "tsc --build -w",
    "dev": "node dev.mjs",
    "tsc": "lerna run tsc --stream --parallel"
  },
  "dependencies": {
    "typescript": "^4.7.4"
  }
}
